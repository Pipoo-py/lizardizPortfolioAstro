---
import ProjectCard from "./ProjectCard.astro"
import screenshot1 from "../assets/screenshots/sc-1.webp"
import screenshot2 from "../assets/screenshots/sc-2.webp"
import screenshot3 from "../assets/screenshots/sc-3.webp"
import screenshot4 from "../assets/screenshots/sc-4.webp"
import screenshot5 from "../assets/screenshots/sc-5.webp"

const totalProjects = [
    {
      title: "Clon de Twitter",
      description: "Página con funcionalidades únicamente de frontend encargada de imitar lo mejor posible la interfaz (UI/UX) de Twitter (ahora X), usando React.",
      skills: ["HTML", "CSS", "JavaScript", "React"],
      link: "https://pipoo-py.github.io/twitter-clon/",
      sc: screenshot1,
    },
    {
      title: "Clon de Instagram",
      description: "Al igual que el clon de Twitter, este busca imitar la interfaz de Instagram. Fué elaborado sin frameworks (solo HTML, CSS y JavaScript).",
      skills: ["HTML", "CSS", "JavaScript"],
      link: "https://pipoo-py.github.io/Instagram-copy-clon/",
      sc: screenshot2,
    },
    {
      title: "Google Pixel 9 landing page",
      description: "Página encargada de publicitar el Google Pixel 9 y sus variaciones. Fué hecho únicamente con HTML, CSS y JavaScript.",
      skills: ["HTML", "CSS", "JavaScript"],
      link: "https://pipoo-py.github.io/LANDING-PAGE-PIXEL-9/",
      sc: screenshot3,
    },
    {
      title: "Caracol C.A",
      description: "Sitio web desarrollado para la empresa Caracol en Venezuela, dedicada a vender múltiples productos y servicios de caracter industrial; por ejemplo: tráilers, saneamiento ambiental, tanques de almacentamiento, movilización de equipos y generadores eléctricos.",
      skills: ["HTML","CSS","JavaScript"],
      link: "https://www.caracol.com.ve",
      sc: screenshot4,
    },
    {
      title: "Crucelis Spa & Salón",
      description: "Página web desarrollada para un salón de estética principalmente de pedicure y manicure en Lima, Perú.",
      skills: ["HTML","CSS","JavaScript", "Astro","React"],
      link: "https://crucelisspasalon.netlify.app/",
      sc: screenshot5,
    },
  ]
---

<section class="projects__section" id="projects">
    <div class="projects__section-container">
      <h2 class="projects__title">
        Proyectos
      </h2>
        <div class="projects-grid__container">
        {
          totalProjects.map((project, index) => {
            return (
              <ProjectCard projectInfo={project}/>
              );
            })
          }
        </div>
      </div> 
</section>

<style>
  .projects__section-container{
  background-color: var(--contraste-gris-perla);
  padding: 24px;
}

.projects-grid__container{
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  place-content: center;
  gap: 2rem;

}

.projects__title{
  text-align: center;
  font-size: clamp(1.5rem, 50dvw, 2.5rem);
  animation-name: viewTitle;
  animation-timeline: view();
  animation-range: entry 0% cover 50% , cover 50% exit 100%;
  animation-fill-mode: both; 
}
</style>
